CAPI=2:

name: pynq_fused:common:sim_base:0.1.1
description: Base package for simulations

filesets:
  rtl:
    depend: 
      - pynq_fused:common:clk_gen
      - svunit
      - pynq_fused:common:svunit_assert_macros

targets:
  default: &default
    filesets:
      - rtl

  lint:
    <<: *default
    default_tool: verilator
    tools:
      verilator:
        mode: lint-only
        verilator_options: [-Wall]

